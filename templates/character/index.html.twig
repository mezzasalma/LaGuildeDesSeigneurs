{% extends 'base.html.twig' %}

{% block title %}Character index{% endblock %}

{% block body %}
    <h1>Index de Charactère</h1>

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Kind</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Caste</th>
                <th>Knowledge</th>
                <th>Intelligence</th>
                <th>Life</th>
                <th>Creation</th>
                <th>Modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>
                    {% if character.kind == "Dame" %}
                        <strong>{{ character.kind }}</strong>
                    {% else %}
                        {{ character.kind }}
                    {% endif %}
                </td>
                <td><a href="{{ path('character_show', {'id': character.id}) }}">{{ character.name }}</a></td>
                <td>{{ character.surname }}</td>
                <td>{{ character.caste }}</td>
                <td>{{ character.knowledge }}</td>
                <td>{{ character.intelligence }}</td>
                <td>{{ character.life }}</td>
                <td>{{ character.creation ? character.creation|date('d-m-Y') : '' }}</td>
                <td>{{ character.modification ? character.modification|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('character_edit', {'id': character.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="container text-center">
        <a role="button" class="btn btn-secondary" href="{{ path('character_new') }}">Nouveau Charactère</a>
    </div>


{% endblock %}
